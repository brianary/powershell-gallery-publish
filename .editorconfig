# EditorConfig is awesome: http://EditorConfig.org

# last word for the project
root = true

# defaults
[*]
indent_style             = space
indent_size              = 4
tab_width                = 4
end_of_line              = crlf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80

[*.ps1]
indent_style = tab
charset      = utf-8-bom

# git
[{.gitattributes,CODEOWNERS}]
charset = utf-8
